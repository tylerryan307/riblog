<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<p class="date"> 
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago 
		<% if user_signed_in? %>
		| <%= link_to 'edit', edit_post_path(@post) %>
		<% end %>
	</p>
	<%= image_tag @post.image_url if @post.image? %>
	<p class="body">
		<%= @post.body %>
	</p>
</div>